<?xml version="1.0" encoding="utf-8"?>

<Application xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Missio.App">
    <Application.Resources>
        <ResourceDictionary>
            <Color x:Key="MainTextColor">White</Color>
            <Color x:Key="LoginBackground">#F5F5F5</Color>
            <Color x:Key="SecondaryTextColor">Black</Color>
            <Color x:Key="PrimaryColor">#590016</Color>
            <Color x:Key="PrimaryDarkColor">#3D000F</Color>
            <LayoutOptions x:Key="LogInLayoutOptions" Alignment="Center"></LayoutOptions>
            <Color x:Key="EntryBackgroundColor">Transparent</Color>
            <Style x:Key="ButtonStyle" TargetType="Button" >
                <Setter Property="BackgroundColor" Value="Transparent"/>
            </Style>
        </ResourceDictionary>
        
    </Application.Resources>

</Application>