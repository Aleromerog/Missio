<?xml version="1.0" encoding="utf-8"?>

<Application xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:system="clr-namespace:System;assembly=netstandard"
             x:Class="Missio.App">
    <Application.Resources>
        <ResourceDictionary>
            <Color x:Key="MainTextColor">White</Color>
            <Color x:Key="PlaceholderTextColor">Gray</Color>
            <Color x:Key="LoginBackground">#EBEBEB</Color>
            <Color x:Key="SecondaryTextColor">Black</Color>
            <system:Double x:Key="NewsFeedBarHeight">0.05</system:Double>
            <Thickness x:Key="NewsFeedPostMargin">5, 3, 5, 3</Thickness>

            <Style x:Key="ButtonStyle" TargetType="Button">
                <Setter Property="BackgroundColor" Value="Transparent" />
            </Style>
            <Color x:Key="PrimaryColor">#590016</Color>
            <Color x:Key="PrimaryDarkColor">#3D000F</Color>
            <LayoutOptions x:Key="LogInLayoutOptions" Alignment="Center" />
            <Color x:Key="EntryBackgroundColor">Transparent</Color>
        </ResourceDictionary>

    </Application.Resources>

</Application>